<div class="content-area">
  <h2><%=h user.firstname %>  <%=h user.surname %></h2>
  <div class="content-image">
    <%=  image_for(user, :large) %>
    <div class="content-links">
      <%= link_to I18n.t('edit'), edit_user_path(user, :page=>current_page)%> |
      <%= link_to I18n.t('close'), "JavaScript:void(0);", :onClick => "$('user-detail').innerHTML='';" %>
    </div>
  </div>

  <div class="content-detail">
   <%=  render :partial => 'show', :locals => {:user => user} %>
  </div>
</div>
